<h1>Новости</h1>

<hr/>
<%= link_to('Добавить новость', new_news_path) \
    if (not @user.nil? and @user.is_admin) %> 

<%= link_to('Редактировать категории', categories_path) \
    if (not @user.nil? and @user.is_admin) %>

<%=render 'login' %>
<hr/>

<br/>
<%=render 'filter_news' %>
<br/>
<br/>

<table id="news">

<% @news.each do |news| %>
  <tr>
    <td id="title"><%= news.title %></td>
  </tr>
  <tr>
    <td id="short_text"><%= news.short_text %></td>
  </tr>
  <tr>  
    <td><%= link_to 'Подробней', news %></td>
  </tr>
  <tr>  
    <td id="meta_news"><%= news.news_date.to_s(:ru_date) %> | <%= news.user.name %></td>
  </tr>
    <td><%= link_to 'Редактировать', edit_news_path(news) \
            if (not @user.nil? and @user.is_admin) %>  |  

        <%= link_to 'Удалить', news, method: :delete, data: { confirm: 'Уверены?' } \
            if (not @user.nil? and @user.is_admin)%></td>
  </tr>
  <tr>
    <td><br/></td>
  </tr>
<% end %>
</table>

<br />


